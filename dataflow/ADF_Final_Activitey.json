{
	"name": "ADF_Final_Activitey",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText21",
						"type": "DatasetReference"
					},
					"name": "Salesdata"
				},
				{
					"dataset": {
						"referenceName": "DelimitedText22",
						"type": "DatasetReference"
					},
					"name": "Type"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "join1",
					"description": "Inner join on 'Sales data' and 'Type'"
				},
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          InvoiceNumber as string,",
				"          Date as date 'dd/MM/yyyy',",
				"          Type as string,",
				"          Period as date 'dd/MM/yyyy',",
				"          DueDate as string,",
				"          InvoiceDate as string,",
				"          FromDate as string,",
				"          ToDate as string,",
				"          NetAmount as string,",
				"          VatAmount as string,",
				"          grossValue as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Salesdata",
				"source(output(",
				"          SKTransType as string,",
				"          BKTransType as string,",
				"          TransDesc as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Type",
				"Salesdata, Type join(Type == BKTransType,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 select(mapColumn(",
				"          InvoiceNumber,",
				"          Date,",
				"          Type,",
				"          Period,",
				"          DueDate,",
				"          InvoiceDate,",
				"          FromDate,",
				"          ToDate,",
				"          NetAmount,",
				"          VatAmount,",
				"          grossValue,",
				"          SKTransType,",
				"          TransDesc",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(CharecontrolNumber = concat(Type, '-', InvoiceNumber)\r",
				",",
				"          AmountPaidReceived = add(NetAmount,VatAmount)*grossValue,",
				"          AsOfDate = currentDate('dd-mm-yyyy'),",
				"          Filename = endsWith(concat('Sales', toString(currentTimestamp(), 'ddmmyyy')), '.csv')\r",
				",",
				"          CreatedBy = 'Admin',",
				"          UpdatedDateTime = '0',",
				"          SKdate = toString(Date, 'ddMMyyyy')) ~> derivedColumn1"
			]
		}
	}
}